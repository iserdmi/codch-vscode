{
  "$schema": "http://json.schemastore.org/tmLanguage",
  "name": "CODCH",
  "scopeName": "source.codch",
  "patterns": [
    {
      "include": "#config_section"
    },
    {
      "include": "#paths_section"
    },
    {
      "include": "#task_section"
    }
  ],
  "repository": {
    "config_section": {
      "patterns": [
        {
          "name": "keyword.other.section.codch",
          "match": "^config:$"
        },
        {
          "begin": "(config:)",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.section.codch"
            }
          },
          "end": "(?=^\\w+:)",
          "patterns": [
            {
              "include": "#yaml_content"
            }
          ]
        }
      ]
    },
    "paths_section": {
      "patterns": [
        {
          "name": "keyword.other.section.codch",
          "match": "^(inspiration|context|output):$"
        },
        {
          "begin": "(inspiration|context|output):",
          "beginCaptures": {
            "0": {
              "name": "keyword.other.section.codch"
            }
          },
          "end": "(?=^\\w+:)",
          "patterns": [
            {
              "name": "string.quoted.path.codch",
              "match": "^\\s*-\\s*.*$"
            }
          ]
        }
      ]
    },
    "task_section": {
      "patterns": [
        {
          "name": "keyword.other.section.codch",
          "match": "^task:$"
        },
        {
          "begin": "(task:)",
          "beginCaptures": {
            "1": {
              "name": "keyword.other.section.codch"
            }
          },
          "end": "(?=^\\w+:)",
          "patterns": [
            {
              "name": "string.unquoted.plain-text.codch",
              "match": ".*"
            }
          ]
        }
      ]
    },
    "yaml_content": {
      "patterns": [
        {
          "include": "source.yaml"
        }
      ]
    }
  }
}
